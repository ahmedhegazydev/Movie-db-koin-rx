<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_margin="@dimen/_7sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_3sdp"
        app:layout_constraintTop_toTopOf="parent"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/known_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/will_smith"


                />

            <TextView
                android:id="@+id/known_text_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_overview"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="@dimen/_7sdp"
                android:text="Ahmed AhmedAhmedAhmedAhmedAhmedAhmedAhmed Ahmed Ahmed Ahmed Ahmed"
                android:textAllCaps="false"
                android:textColor="@color/White_Azure"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintBottom_toBottomOf="parent"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>